# Django settings module (switch to prod settings when needed) / Модуль настроек Django (для прод переключить)
DJANGO_SETTINGS_MODULE=config.settings.dev

# Change this key in production! / Обязательно смените ключ в проде!
DJANGO_SECRET_KEY=change-me-frontend

# Enable Django debug mode (disable in prod) / Включает DEBUG (в проде отключить)
DEBUG=True

# Allowed hosts for BFF (add nginx host if required) / Допустимые хосты (добавьте nginx-домен)
ALLOWED_HOSTS=localhost,127.0.0.1

# URL of backend API accessible from container / URL backend API внутри сети
BACKEND_API_URL=http://backend:8000/api/v1

# Redis connection for caching tokens/partials / Redis для кэша токенов и partials
REDIS_URL=redis://redis:6379/0

# Cookie name used by BFF session / Имя cookie для сессии BFF
SESSION_COOKIE_NAME=bff_sessionid
