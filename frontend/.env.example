# Django settings module (switch to prod settings when needed)
DJANGO_SETTINGS_MODULE=config.settings.dev

# Change this key in production!
DJANGO_SECRET_KEY=change-me-frontend

# Enable Django debug mode (disable in prod)
DEBUG=True

# Allowed hosts for BFF (add nginx host if required)
ALLOWED_HOSTS=localhost,127.0.0.1

# URL of backend API accessible from container
BACKEND_API_URL=http://backend:8000/api/v1

# Redis connection for caching tokens/partials
REDIS_URL=redis://redis:6379/0

# Cookie name used by BFF session
SESSION_COOKIE_NAME=bff_sessionid
