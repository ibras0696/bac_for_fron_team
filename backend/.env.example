# Django settings module (switch to config.settings.prod in prod)
DJANGO_SETTINGS_MODULE=config.settings.dev

# Change this key in prod!
DJANGO_SECRET_KEY=change-me

# Enable Django debug mode (set False in prod)
DEBUG=True

# Comma-separated hostnames allowed to serve the app
ALLOWED_HOSTS=localhost,127.0.0.1

# Postgres connection string used by dj-database-url or custom logic
DATABASE_URL=postgres://crm_dev:crm_dev@postgres:5432/crm_dev

# Redis instance for caching and Celery broker
REDIS_URL=redis://redis:6379/0

# Celery broker/result backend (keep separate DBs when possible)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Optional Sentry DSN for error tracking
SENTRY_DSN=
