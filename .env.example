# Name of the compose project (prefixes container names/volumes) / Имя проекта docker-compose (префикс контейнеров/томов)
COMPOSE_PROJECT_NAME=crm_bff

# Docker image tags (override if pushing to registry) / Теги docker-образов (переопределить для registry)
BACKEND_IMAGE=crm-backend
FRONTEND_IMAGE=crm-frontend

# Postgres credentials (shared between services) / Настройки доступа PostgreSQL (общие для сервисов)
POSTGRES_USER=crm_dev
POSTGRES_PASSWORD=crm_dev
POSTGRES_DB=crm_dev
POSTGRES_PORT=5432

# Redis port (container exposes 6379 internally) / Порт Redis (контейнер слушает 6379)
REDIS_PORT=6379

# Host port for nginx reverse proxy / Порт хоста для nginx reverse proxy
NGINX_PORT=8000
