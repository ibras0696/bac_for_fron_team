# Name of the compose project (prefixes container names/volumes)
COMPOSE_PROJECT_NAME=crm_bff

# Docker image tags (override if pushing to registry)
BACKEND_IMAGE=crm-backend
FRONTEND_IMAGE=crm-frontend

# Postgres credentials (shared between services)
POSTGRES_USER=crm_dev
POSTGRES_PASSWORD=crm_dev
POSTGRES_DB=crm_dev
POSTGRES_PORT=5432

# Redis port (container exposes 6379 internally)
REDIS_PORT=6379

# Host port for nginx reverse proxy
NGINX_PORT=8000
